    ViewBag.PageTitle = "Plugins.Misc.Sms77.Bulk.Sms";
}

@section history
{
    @await Component.InvokeAsync(typeof(SmsMessageHistoryViewComponent), new AbstractMessageHistoryViewComponentData<SmsRecord> {
