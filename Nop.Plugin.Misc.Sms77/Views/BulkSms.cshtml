@model Nop.Plugin.Misc.Sms77.Models.SmsModel 

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Misc.Sms77.Bulk.Sms").Text;
}

<h1 class="text-center">@T("Plugins.Misc.Sms77.Bulk.Sms").Text</h1>

<form asp-controller="Bulk" asp-action="Sms" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="Text"/>
        </div>
    
        <div class="col-md-9">
            <nop-textarea asp-for="Text" asp-required="true" />
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="SelectedCustomerRoleIds" asp-display-hint="false"/>
        </div>

        <div class="col-md-9">
            <nop-select
                asp-for="SelectedCustomerRoleIds"
                asp-items="Model.AvailableCustomerRoles"
                asp-multiple="true"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="From"/>
        </div>

        <div class="col-md-9">
            <nop-editor asp-for="From"/>
        </div>
    </div>

    <div class="col-md-9 col-md-offset-3">
        <input
            class="btn btn-primary"
            name="save"
            type="submit"
            value="@T("Admin.Common.Save")"/>
    </div>
</form>

<table class="table table-bordered">
    <caption>
        <h2>@T("Plugins.Misc.Sms77.Bulk.History")</h2>
    </caption>

    <thead>
    <tr>
        <th>@T("Plugins.Misc.Sms77.Bulk.History")</th>
        <th>@T("Plugins.Misc.Sms77.Bulk.Config")</th>
        <th>@T("Plugins.Misc.Sms77.Bulk.Response")</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var sent in Model.Sent) {
        <tr>
            <td>@sent.Id</td>
            <td>@sent.Config</td>
            <td>@sent.Response</td>
        </tr>
    }
    </tbody>
</table>

<script>
$(() => {
    const customerRolesIdsInput = 
        $('#@Html.IdFor(m => m.SelectedCustomerRoleIds)').data("kendoMultiSelect");
    
    customerRolesIdsInput.setOptions({
        customerRolesIdsInput: false,
        filter: 'contains'
    });
    
    @if (0 == Model.AvailableCustomerRoles.Count) {
        <text>
            customerRolesIdsInput.setOptions({
                enable: false,
                placeholder: '@T("Admin.Customers.Customers.Fields.CustomerRoles.NoRoles")'
            });
            
            customerRolesIdsInput._placeholder();
            
            customerRolesIdsInput._enable();
        </text>
    }
})
</script>